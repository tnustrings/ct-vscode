{
    "name": "codetext",
    "displayName": "codetext: ct",
    "description": "codetext for vs code",
    "version": "0.0.3",
    "publisher": "tnustrings",
    "repository": "https://github.com/tnustrings/ct-vscode",
    "engines": {
	"vscode": "^1.98.0"
    },
    "categories": [
	"Languages"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
	"commands": [
	    {
		"command": "ct.assemble",
		"title": "ct: assemble"
	    },
	    {
		"command": "ct.go_to_line",
		"title": "ct: go to line"
	    },
	    {
		"command": "ct.go_to_parent",
		"title": "ct: go to parent"
	    },
	    {
		"command": "ct.go_to_child",
		"title": "ct: go to child"
	    }
	],

	"keybindings": [
	    {
		"command": "ct.assemble",
		"key": "ctrl+alt+a",
		"mac": "cmd+alt+a"
	    },
	    {
		"command": "ct.go_to_line",
		"key": "ctrl+alt+g",
		"mac": "cmd+alt+g"
	    },
	    {
		"command": "ct.go_to_parent",
		"key": "ctrl+alt+p",
		"mac": "cmd+alt+p"
	    },
	    {
		"command": "ct.go_to_child",
		"key": "ctrl+alt+c",
		"mac": "cmd+alt+c"
	    }
	],

		"languages": [
            {
                "id": "ct",
                "aliases": [
                    "codetext"
                ],
                "extensions": [
                    ".ct"
                ],
                "configuration": "./ct.configuration.json"
            }
	],
	
        "grammars": [
            {
                "language": "ct",
                "scopeName": "source.ct",
                "path": "./syntaxes/ct.tmLanguage.json"
            }
        ]



    },

    "scripts": {
	"vscode:prepublish": "npm run compile",
	"compile": "tsc -p ./",
	"watch": "tsc -watch -p ./",
	"pretest": "npm run compile && npm run lint",
	"lint": "eslint src",
	"test": "vscode-test"
    },
    "devDependencies": {
	"@types/vscode": "^1.98.0",
	"@types/mocha": "^10.0.10",
	"@types/node": "20.x",
	"@typescript-eslint/eslint-plugin": "^8.25.0",
	"@typescript-eslint/parser": "^8.25.0",
	"eslint": "^9.21.0",
	"typescript": "^5.7.3",
	"@vscode/test-cli": "^0.0.10",
	"@vscode/test-electron": "^2.4.1"
    }
}
